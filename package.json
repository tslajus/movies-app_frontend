{
  "name": "my-movies-fe",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@tanstack/react-query": "4.24.10",
    "axios": "1.3.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.21.0",
    "@babel/preset-env": "7.20.2",
    "@svgr/webpack": "6.5.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.4.0",
    "@types/node": "18.14.1",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-css-modules": "2.11.0",
    "eslint-plugin-jest-dom": "4.0.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-normalize": "10.0.1",
    "postcss-preset-env": "8.0.1",
    "prettier": "2.8.4",
    "stylelint": "15.2.0",
    "stylelint-config-css-modules": "4.2.0",
    "stylelint-config-recommended": "10.0.1",
    "stylelint-order": "6.0.2",
    "typescript": "4.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "write-env-vars": "node -e \"require('fs').writeFileSync('./.env', 'REACT_APP_API_URL=' + process.argv[1] + '\\n');\"",
    "types-check": "tsc",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:ts": "eslint \"./**/*.{ts,tsx}\" --format stylish --fix --quiet",
    "lint:styles": "stylelint \"./**/*.css\"",
    "prettify": "prettier \"src/**/*.ts\" --write .",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged",
      "post-applypatch": "check-dependencies --install",
      "post-merge": "check-dependencies --install"
    }
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "eslint --format stylish --fix --quiet",
      "stylelint **/*.css",
      "prettier --write",
      "git add"
    ]
  },
  "overrides": {
    "nth-check": "2.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@shotgunjed)/"
    ]
  }
}